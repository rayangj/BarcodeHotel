<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/show_gmb"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#dadada"
                android:scaleType="centerCrop">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/show_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Makanan"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/show_idr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp."
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_regular"/>
                    <TextView
                        android:id="@+id/show_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Makanan"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_regular">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/gone_id"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/gone_gambar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <ImageButton
                    android:id="@+id/btn_tambah_ke_keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:textColor="#fff"
                    android:background="@drawable/btn_rounded_small"
                    android:padding="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>