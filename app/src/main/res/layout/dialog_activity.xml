<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_ji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="masukan jumlah item"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:inputType="number"
        android:fontFamily="@font/montserrat_regular"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="end">

            <Button
                android:id="@+id/btn_hapus_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus Item"
                android:textSize="12dp"
                android:padding="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_rounded_small_canceled"
                android:fontFamily="@font/montserrat_medium"/>
            <Button
                android:id="@+id/btn_edit_jumlah_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Jumlah"
                android:textSize="12dp"
                android:textColor="#fff"
                android:padding="10dp"
                android:background="@drawable/btn_rounded_small"
                android:fontFamily="@font/montserrat_medium"/>

    </LinearLayout>

</LinearLayout>